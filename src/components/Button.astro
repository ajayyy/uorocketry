---
const { text, href } = Astro.props;
---

<div class="mx-auto flex w-full justify-center">
	{
		href ? (
			<a href={href} target="_blank" rel="noopener noreferrer" class="contents">
				<button>{text || <slot />}</button>
			</a>
		) : (
			<button>{text || <slot />}</button>
		)
	}
</div>

<style>
	button {
		@apply w-fit rounded  bg-blue-800 py-2 px-4 font-bold text-white hover:bg-blue-600;
	}
</style>
