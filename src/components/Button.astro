---
const { text, href } = Astro.props;

const classes = "hover:bg-blue-600 w-fit rounded bg-blue-800 py-2 px-4 font-bold text-white";
---

<div class="mx-auto flex w-full justify-center">
	{
		href ? (
			<a href={href} target="_blank" rel="noopener noreferrer" class="contents">
				<button class={classes}>{text || <slot />}</button>
			</a>
		) : (
			<button class={classes}>{text || <slot />}</button>
		)
	}
</div>
